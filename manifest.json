{
  "manifest_version": 3,
  "name": "Focus Timer",
  "version": "1.0.0",
  "description": "Open-source attention engine with deep work tracking, visual enforcement, and intelligent insights.",
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "scripting",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Timer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
